{
  "name": "chat-room",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf dist",
    "copy:css:animated": "copyfiles -f node_modules/animate.css/animate.min.css public/css",
    "dev:css": "postcss public/css/app.dev.css -o public/css/app.css",
    "dev:css:watch": "npm run dev:css --watch",
    "dev:views:watch": "chokidar \"src/views/**/*.hbs\" -c \"npm run dev:css\"",
    "dev:animate:watch": "chokidar node_modules/animate.css/animate.min.css -c \"npm run copy:css:animated\"",
    "dev:serve": "cross-env NODE_ENV=development nodemon",
    "dev": "npm run copy:css:animated && concurrently -n CSS,HBS,API \"npm:dev:css:watch\" \"npm:dev:views:watch\" \"npm:dev:serve\"",
    "build:css": "postcss public/css/app.dev.css -o dist/public/css/app.css",
    "copy:views": "copyfiles -u 1 \"src/views/**/*\" dist/views",
    "copy:public": "copyfiles -u 1 \"public/**/*\" dist/public",
    "build": "npm run clean && tsc && npm run copy:css:animated && npm run build:css && npm run copy:views && npm run copy:public",
    "start": "cross-env NODE_ENV=production node dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "animate.css": "^4.1.1",
    "argon2": "^0.44.0",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-handlebars": "^8.0.3",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/connect-livereload": "^0.6.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/livereload": "^0.9.5",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "connect-livereload": "^0.6.1",
    "copyfiles": "^2.4.1",
    "daisyui": "^5.3.8",
    "livereload": "^0.10.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.16",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}